<reactiveUi:ReactiveWindow x:TypeArguments="local:MainWindowViewModel" x:Class="VideoMapping.MainWindow"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                xmlns:local="clr-namespace:VideoMapping"
                                xmlns:reactiveUi="http://reactiveui.net"
                                mc:Ignorable="d"
                                Title="Video mapping for Stella"
                                Height="450" Width="800">
    <UniformGrid Columns="2">
        <TextBlock Text="Pixels per row:"/>
        <TextBox x:Name="PixelsPerRowTextBox"/>

        <TextBlock Text="Rows:"/>
        <TextBox x:Name="RowsTextBox"/>

        <TextBlock Text="Output folder:"/>
        <TextBox x:Name="OutputFolderTextBox"/>

        <TextBlock Text="Storyboard folder:"/>
        <TextBox x:Name="StoryboardFolderTextBox"/>

        <TextBlock Text="Input folder (files should be of type .mp4):"/>
        <TextBox x:Name="InputFolderTextBox"/>

        <Button Content="Start" x:Name="StartButton"/>

    </UniformGrid>
</reactiveUi:ReactiveWindow>
