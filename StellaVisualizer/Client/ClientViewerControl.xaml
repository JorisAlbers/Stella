<UserControl x:Class="StellaTestSuite.Client.ClientViewerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StellaTestSuite.Client"
             d:DataContext="{d:DesignInstance local:ClientViewerViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <UniformGrid Rows="1" Columns="2" >
        <!--Child controls are set in code behind-->
        <UniformGrid Columns="1" Name="Row1"/>
        <UniformGrid Columns="1" Name="Row2"/>
    </UniformGrid>
</UserControl>
