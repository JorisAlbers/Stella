<UserControl x:Class="StellaVisualizer.Controls.RPi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StellaVisualizer.Controls"
             xmlns:viewModels="clr-namespace:StellaVisualizer.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance viewModels:RpiViewModel}">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type viewModels:LedStripViewModel}">
            <local:LedStrip/>
        </DataTemplate>
    </UserControl.Resources>

    <ListBox ItemsSource="{Binding LedStripViewModels}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Black" BorderThickness="1"
             VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch"
             ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>


   
</UserControl>
