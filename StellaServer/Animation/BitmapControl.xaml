<reactiveUi:ReactiveUserControl
    xmlns:reactiveUi="http://reactiveui.net"
    x:TypeArguments="animation:BitmapViewModel" 
    x:Class="StellaServer.Animation.BitmapControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:stellaServer="clr-namespace:StellaServer"
             xmlns:animation="clr-namespace:StellaServer.Animation"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="150">
    <materialDesign:Card>
        <DockPanel Margin="5">
            <Image  DockPanel.Dock="Top"   
                        x:Name="Image" 
                       HorizontalAlignment="Stretch" 
                       VerticalAlignment="Stretch"
                        Width="175"
                        Height="175"/>
            <Border Background="White" VerticalAlignment="Bottom" HorizontalAlignment="Stretch">
                <TextBlock x:Name="Name"  Foreground="Black" HorizontalAlignment="Center" />
            </Border>
        </DockPanel>
    </materialDesign:Card>
</reactiveUi:ReactiveUserControl>
