<reactiveUi:ReactiveUserControl 
    x:TypeArguments="local:AnimationsPanelViewModel" 
    x:Class="StellaServer.Animation.AnimationPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:reactiveUi="http://reactiveui.net"
    xmlns:local="clr-namespace:StellaServer.Animation"
    xmlns:details="clr-namespace:StellaServer.Animation.Details"
    mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListView x:Name="StoryboardListView" 
                  VirtualizingPanel.IsVirtualizing="False">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </Grid>
</reactiveUi:ReactiveUserControl >
