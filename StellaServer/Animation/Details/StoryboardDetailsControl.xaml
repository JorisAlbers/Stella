<reactiveUi:ReactiveUserControl x:TypeArguments="local:StoryboardDetailsControlViewModel"
                                x:Class="StellaServer.Animation.Details.StoryboardDetailsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StellaServer.Animation.Details"
             xmlns:reactiveUi="http://reactiveui.net"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <materialDesign:Card Margin="10">
        <DockPanel Margin="5">
            <DockPanel DockPanel.Dock="Top">

                <Button DockPanel.Dock="Right" 
                        x:Name="BackButton"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Content="{materialDesign:PackIcon ArrowBack}"/>

                <TextBlock x:Name="NameTextBlock" 
                           DockPanel.Dock="Top" FontSize="20"/>
            </DockPanel>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom"
                        HorizontalAlignment="Center"
                        x:Name="ShapeButtonsStackPanel">
                <Border Background="SlateGray"
                        BorderBrush="White"
                        BorderThickness="1">
                    <StackPanel Margin="5">
                        <TextBlock Text="Start according to shape"></TextBlock>

                        <StackPanel Orientation="Horizontal">
                            <Button Content="||" x:Name="StartAtTheSameTimeButton"
                                    Margin="5"/>
                            <Button Content="/" x:Name="StartAsForwardSlashButton"
                                    Margin="5"/>
                            <Button Content="\/" x:Name="StartAsArrowHeadButton"
                                    Margin="5"/>
                        </StackPanel>
                      
                    </StackPanel>

                </Border>

               
            </StackPanel>

            <DockPanel DockPanel.Dock="Top">
                <ListView x:Name="AnimationSettingsListView"
                          DockPanel.Dock="Bottom" />
            </DockPanel>

            

        </DockPanel>
       
    </materialDesign:Card>
</reactiveUi:ReactiveUserControl>
