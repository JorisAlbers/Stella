<reactiveUi:ReactiveUserControl x:TypeArguments="stellaServer:MidiPadButtonViewModel" x:Class="StellaServer.Midi.MidiPadButton"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                                xmlns:local="clr-namespace:StellaServer.Midi"
                                xmlns:reactiveUi="http://reactiveui.net"
                                xmlns:stellaServer="clr-namespace:StellaServer"
                                mc:Ignorable="d" 
                                d:DesignHeight="450" d:DesignWidth="800">
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Border x:Name="PadBorder"
            BorderBrush="White" BorderThickness="1" CornerRadius="3">
            <DockPanel LastChildFill="False">
                <TextBlock x:Name="ControllerIndexTextBlock" DockPanel.Dock="Top"/>

                <TextBlock x:Name="BpmTextBlock" DockPanel.Dock="Bottom"/>
            </DockPanel>

            
            
        </Border>
    </Grid>
</reactiveUi:ReactiveUserControl>

    