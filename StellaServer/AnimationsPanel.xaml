<reactiveUi:ReactiveUserControl 
    x:TypeArguments="local:AnimationsPanelViewModel" 
    x:Class="StellaServer.AnimationsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StellaServer"
             xmlns:reactiveUi="http://reactiveui.net"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
        <UniformGrid>
            <TextBox x:Name="BitmapFolderTextBox"/>
            <ListBox x:Name="BitmapsListBox">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Background="Red" Text="{Binding}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </UniformGrid>
</reactiveUi:ReactiveUserControl>
