<UserControl x:Class="StellaTestSuite.Server.ServerControlPanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StellaTestSuite.Server"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="250"
             Background="Azure"
             d:DataContext="{d:DesignInstance local:ServerControlPanelViewModel}">
    <Grid>
        <ListView ItemsSource="{Binding Storyboards}" SelectedItem="{Binding SelectedStoryboard}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
            
    </Grid>
</UserControl>
